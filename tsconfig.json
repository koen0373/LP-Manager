{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "es2021"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["*", "./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "types/**/*",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "pages/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/* 2",
    "src/**/* 2"
  ]
}
